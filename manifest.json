{
	"manifest_version": 2,
	"name": "Quick Order",
	"description": "Thêm nhanh đơn hàng",
	"version": "1.1",
	"permissions": [
		"storage", "clipboardRead", "tabs"
	],
        "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"], 
          "js": ["key_event.js"],  
          "run_at": "document_start" 
        }
        ],
        "options_page": "options.html",
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/icon48.png",          
			"38": "img/icon48.png"          
		},
		"default_popup": "home.html"
	},
        
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	],
        "background":
            {
            "scripts": ["background.js"],
            "persistent": true
            },
        "commands": {
              "_execute_browser_action": {
                "suggested_key": {
                      "default": "Ctrl+Q"
                    }
            },
              "AHoTen": {
                "suggested_key": {
                  "default": "Alt+1",
                  "mac": "Alt+1"
                },
                "description": "Hotkey Họ Tên",
                "global": true
              },
              "BDienThoai": {
                "suggested_key": {
                  "default": "Alt+2",
                  "mac": "Alt+2"
                },
                "description": "Hotkey Điện Thoại",
                "global": true
              },
              "CDiaChi": {
                "suggested_key": {
                  "default": "Alt+3",
                  "mac": "Alt+3"
                },
                "description": "Hotkey Địa Chỉ",
                "global": true
              }
         }
}